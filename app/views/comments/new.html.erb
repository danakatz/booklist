<h4>New Comment - <%= @book.title %></h4>
<% if @comment.errors.any? %>
	<ul class='errors'>
	<% @comment.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>
<%= form_tag "/books/#{@book.id}/comments" do %>
	<%= text_area_tag 'comment', nil, size: '50x6' %></br>
	<%= submit_tag 'Post comment' %>
<% end %>