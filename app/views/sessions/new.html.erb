<h3>Sign in</h3>

<%= form_tag "/sessions", class: "form-horizontal" do %>

	<div class="form-group">
		<%= label_tag :username, "Username: ", class: "col-sm-1 control-label" %>
		<div class="col-sm-10">
			<%= text_field_tag :username %>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :password, "Password: ", class: "col-sm-1 control-label" %>
		<div class="col-sm-10">
			<%= password_field_tag :password %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
			<%= submit_tag "Sign in" %>
		</div>
	</div>

<% end %>