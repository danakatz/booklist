<h3>Create an account</h3>

<% if @user.errors.any? %>
  <ul class='errors'>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/users", class: "form-horizontal" do %>

  <div class="form-group">
    <%= label_tag :username, "Username: ", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :username %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email, "Email: ", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= email_field_tag :email %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password: ", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= submit_tag "Sign up" %>
    </div>
  </div>
<% end %>