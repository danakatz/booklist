<h3>Create an account</h3>

<% if @user.errors.any? %>
	<ul class='errors'>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_tag "/users" do %>

	<%= label_tag :username %>
	<%= text_field_tag :username %></br>

	<%= label_tag :email %>
	<%= text_field_tag :email %></br>

	<%= label_tag :password %>
	<%= password_field_tag :password %></br>

	<%= submit_tag "Sign in" %>
<% end %>